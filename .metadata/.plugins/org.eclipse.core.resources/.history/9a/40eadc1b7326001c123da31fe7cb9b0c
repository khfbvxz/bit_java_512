package net.bit.day06;

import java.util.InputMismatchException;
import java.util.Scanner;

public class HomeWork09 {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		while (true) {
			System.out.print("숫자입력>>>"); // 1~10사이 숫자 입력
			try {
//				int number = Integer.parseInt(input.nextLine());
				int number = input.nextInt();
				if (1 >= number && number >= 10) {
					System.out.println("정수의 범위를 다시 입력하세요 (1~10)");
					continue;
				} else {

					for (int i = 1; i <= number; i++) {
						System.out.print(i + " ");
						Thread.sleep(300);
					}
				}
				System.out.println();
				// if end

			} catch (Exception e) {
				System.out.println("정수가 범위가 틀렸습니다. 다시 정수를 입력하세요");

			}
		}
	}
}// 다시 숫자를 입력하세요 10 보다 크거나 1보다 작으면 다시 숫자 입력
	// 정수만 입력 받아라 반복문
// emp 에서 이름, 도시입력 city  = sc.nextLine();
